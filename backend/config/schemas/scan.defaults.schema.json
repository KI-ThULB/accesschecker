{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "profile": { "type": "string" },
      "modules": {
        "type": "object",
        "additionalProperties": {
          "anyOf": [
            { "type": "boolean" },
            { "type": "object" }
          ]
        }
      },
    "profiles": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": { "type": "string" }
      }
    }
  },
  "required": ["profile", "modules", "profiles"]
}
