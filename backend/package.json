{
  "name": "accesschecker-backend",
  "version": "0.2.0",
  "type": "module",
  "scripts": {
    "crawl": "tsx scripts/crawl-scan.ts",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "build:reports": "tsx scripts/build-reports.ts",
    "scan:engine": "node --enable-source-maps dist/core/engine.js --url $URL --profile $PROFILE",
    "scan:landmarks": "node --enable-source-maps dist/core/engine.js --modules landmarks",
    "scan:links": "node --enable-source-maps dist/core/engine.js --modules links",
    "test": "tsx --test tests/**/*.test.ts"
  },
  "dependencies": {
    "@axe-core/playwright": "^4.10.0",
    "@fastify/cors": "^11.1.0",
    "ajv": "^8.17.1",
    "axe-core": "^4.10.3",
    "commander": "^14.0.0",
    "fastify": "^5.5.0",
    "node-fetch": "^3.3.2",
    "nunjucks": "^3.2.4",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^3.11.174",
    "playwright": "^1.46.0",
    "unzipper": "^0.10.14"
  },
  "devDependencies": {
    "@swc/core": "^1.3.104",
    "@swc/helpers": "^0.5.2",
    "@types/commander": "^2.12.0",
    "@types/node": "^20.14.10",
    "@types/nunjucks": "^3.2.6",
    "@types/unzipper": "^0.10.11",
    "jszip": "^3.10.1",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4"
  }
}
